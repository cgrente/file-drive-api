############################################
# Application
############################################

# Environment: local | development | beta | production
NODE_ENV=local

# HTTP server port
PORT=5000


############################################
# MongoDB
############################################

# Base Mongo URI (WITHOUT db name)
# Examples:
#   mongodb://localhost:27017
#   mongodb+srv://<USERNAME>:<PASSWORD>@<CLUSTER_HOST>/<DB_NAME>?retryWrites=true&w=majority
MONGO_URI=

# Optional database name (appended safely if provided)
DB_NAME=file-drive


############################################
# Redis
############################################

# Option A (recommended): full Redis URL
# Example:
#   redis://:<PASSWORD>@<HOST>:6379
REDIS_URL=

# Option B (used if REDIS_URL is not set)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=


############################################
# AWS (S3 + SES)
############################################

AWS_REGION=us-east-1

# Required in local / dev
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# S3 bucket used for file storage
S3_BUCKET_NAME=


############################################
# Stripe
############################################

# Used in local / development / test
STRIPE_SECRET_KEY_TEST=

# Used in production only
STRIPE_SECRET_KEY=


############################################
# Auth / JWT
############################################

# Used to sign access tokens (HS256)
ACCESS_TOKEN_SECRET=

# Used to sign refresh tokens
REFRESH_TOKEN_SECRET=


############################################
# Frontend / CORS
############################################

# Allowed origin for CORS (Angular / React app)
WEBAPP_URL=http://localhost:4200